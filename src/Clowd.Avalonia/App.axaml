<Application
    x:Class="Clowd.Avalonia.App"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="using:Clowd.Avalonia.Controls"
    xmlns:sty="using:FluentAvalonia.Styling">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceInclude Source="/Styles/FluentAvaloniaOverrides.axaml" />
                <ResourceInclude Source="/Styles/SettingsCard.axaml" />
            </ResourceDictionary.MergedDictionaries>
            <ControlTheme
                x:Key="{x:Type controls:LocalizedEnumComboBox}"
                BasedOn="{StaticResource {x:Type ComboBox}}"
                TargetType="controls:LocalizedEnumComboBox" />
        </ResourceDictionary>
    </Application.Resources>
    <Application.Styles>
        <sty:FluentAvaloniaTheme />
        <StyleInclude Source="avares://FluentAvalonia.UI.Windowing/Styles/FAWindowingStyles.axaml" />
        <Style Selector="ComboBox">
            <Setter Property="MinWidth" Value="140" />
        </Style>
        <Style Selector="controls|LocalizedEnumComboBox">
            <Setter Property="MinWidth" Value="140" />
        </Style>
    </Application.Styles>
